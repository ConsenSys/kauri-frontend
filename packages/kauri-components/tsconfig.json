{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "js-stories",
    "components",
    "../kauri-web/lib/theme-config.ts",
    "../kauri-web/types",
    "lib",
    "types"
  ],
  "exclude": ["node_modules", "dist", ".next", "out", "next.config.js"]
}
